{
  "name": "maju-theme",
  "version": "1.0.0",
  "description": "A modern, responsive WordPress theme for creative and digital agencies with AI-powered features",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "build:local": "node scripts/build.js --local",
    "build:sh": "./scripts/build.sh",
    "build:local:sh": "./scripts/build.sh --local",
    "build:css": "tailwindcss -i ./assets/css/src/tailwind.css -o ./assets/css/tailwind.css --watch",
    "build:js": "webpack --mode=production",
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "tailwindcss -i ./assets/css/src/tailwind.css -o ./assets/css/tailwind.css --watch",
    "dev:js": "webpack --mode=development --watch",
    "lint:css": "stylelint 'assets/css/**/*.css'",
    "lint:js": "eslint assets/js/src/**/*.js",
    "format": "prettier --write 'assets/**/*.{css,js}'",
    "clean": "rm -rf build && rm -f maju.zip",
    "install:local": "./scripts/install.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "responsive",
    "accessibility",
    "agency"
  ],
  "author": "Maju Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^10.0.0",
    "cssnano": "^6.0.1",
    "eslint": "^8.55.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.3.6",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
